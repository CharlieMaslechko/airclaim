{
  "manifest_version": 3,
  "name": "Chrome Extension Starter",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.stake.com/*"],
      "js": ["content.js"],
      "css": ["content-style.css"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["*://*.stake.com/*"]
    }
  ],
  "permissions": [
    "webRequest",
    "tabs",
    "activeTab",
    "scripting",
    "storage",
    "cookies"
  ],
  "host_permissions": ["*://*.stake.com/*"],

  "description": "This is the description of your extension",
  "icons": {
    "16": "public/16.png",
    "32": "public/32.png",
    "48": "public/48.png",
    "192": "public/192.png"
  }
}
