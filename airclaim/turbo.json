{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["package.json", "tsconfig.json"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "dependsOn": ["^build"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": [],
      "cache": false
    },
    "lint": {
      "outputs": [],
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "test": {
      "outputs": [],
      "cache": false
    }
  }
}
